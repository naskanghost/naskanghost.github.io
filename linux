#!/usr/bin/env bash
set -Eeuo pipefail

echo "======================================"
echo "   LinUtil by NaskanGhost - Bootstrap "
echo "======================================"

# Clona o LinUtil personalizado (ajuste depois para o seu fork)
if [ ! -d "$HOME/linutil" ]; then
  git clone https://github.com/naskanghost/linutil "$HOME/linutil"
fi

cd "$HOME/linutil"

# Compila se não existir binário
if [ ! -f target/release/linutil ]; then
  cargo build --release
fi

# Executa
exec ./target/release/linutil
